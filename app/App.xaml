<Application x:Class="app.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:app"
             StartupUri="/internal/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <local:ViewModelLocator x:Key="ViewModelLocator"/>
            
            <DataTemplate x:Key="HelpButtonTemplate" DataType="{x:Type local:HelpViewModel}">
                <Button Content="?" FontSize="10" Margin="5,0,0,0" VerticalAlignment="Center"
                    Command="{Binding ShowHelpCommand}"
                    CommandParameter="{Binding HelpText}">
                    <Button.ToolTip>
                        <ToolTip Content="{Binding HelpText}" />
                    </Button.ToolTip>
                </Button>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
